@model TicketHunter.Models.AuthModelView

<div class="col-md-6">
    <h4 class="accountText">SZYBKA REJESTRACJA</h4>
    @using (Html.BeginForm("MemberRegisterSummary", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.RegisterModel.Email, null, new {@class = "form-control", placeholder = "Adres email"})
        @Html.ValidationMessageFor(m => m.RegisterModel.Email)
        <br/>
        @Html.TextBoxFor(m => m.RegisterModel.Password, null, new {@class = "form-control", placeholder = "Hasło", type = "Password"})
        @Html.ValidationMessageFor(m => m.RegisterModel.Password)
        <br/>
        @Html.TextBoxFor(m => m.RegisterModel.RepeatPassword, null, new {@class = "form-control", placeholder = "Powtórz hasło", type = "Password"})
        <br/>
        <button type="submit" class="btn btn-primary btn-block">Zarejestruj</button>
    }
</div>

